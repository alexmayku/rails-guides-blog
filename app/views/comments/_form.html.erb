<%= form_with model: [ article, article.comments.build ],
  class: "max-w-2xl mx-auto space-y-6 bg-white p-6 rounded-lg shadow" do |form| %>

  <div>
    <%= form.label :commenter, class: "text-sm font-medium text-slate-700 mb-2" %>
    <%= form.text_field :commenter,
      class: "mt-1 block w-full rounded-md bg-slate-50 border border-slate-200 px-3 py-2 text-slate-900 shadow-sm focus:border-slate-400 focus:ring-1 focus:ring-slate-400" %>
  </div>

  <div>
    <%= form.label :body, class: "text-sm font-medium text-slate-700 mb-2" %>
    <%= form.text_area :body, rows: 4,
      class: "mt-1 block w-full rounded-md bg-slate-50 border border-slate-200 px-3 py-2 text-slate-900 shadow-sm focus:border-slate-400 focus:ring-1 focus:ring-slate-400" %>
  </div>

  <div>
    <%= form.label :status, class: "text-sm font-medium text-slate-700 mb-2" %>
    <%= form.select :status, Visible::VALID_STATUSES, { selected: 'public' },
      class: "mt-1 block w-full rounded-md bg-slate-50 border border-slate-200 px-3 py-2 text-slate-900 shadow-sm focus:border-slate-400 focus:ring-1 focus:ring-slate-400" %>
  </div>

  <div class="pt-4">
    <%= form.button "Add comment",
      type: "submit",
      class: "inline-block rounded-md bg-slate-900 px-4 py-2 text-sm font-medium text-white hover:bg-slate-700" %>
  </div>

<% end %>
