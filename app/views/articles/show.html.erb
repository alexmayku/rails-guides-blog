<div class="space-y-10">
  <nav>
    <%= link_to "â† Articles", root_path,
      class: "text-sm font-medium text-slate-600 hover:text-slate-900"
    %>
  </nav>

  <article class="space-y-6">
    <header class="space-y-2">
      <h1 class="text-3xl font-bold tracking-tight">
        <%= @article.title %>
      </h1>
    </header>

    <div class="prose prose-slate max-w-none">
      <%= simple_format(@article.body) %>
    </div>
  </article>

  <section class="flex items-center gap-4">
    <%= link_to "Edit Article", edit_article_path(@article),
      class: "inline-block rounded-md bg-slate-900 px-4 py-2 text-sm font-medium text-white hover:bg-slate-700"
    %>

    <%= link_to "Delete", article_path(@article),
      data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      },
      class: "text-sm font-medium text-red-600 hover:text-red-800"
    %>
  </section>

  <section class="mt-12 space-y-6">
    <div class="space-y-1">
      <h2 class="text-lg font-semibold tracking-tight text-slate-900">
        Comments
      </h2>
    </div>

    <div class="relative space-y-4 pl-6 border-l border-slate-200">
      <%= render @article.comments %>
    </div>

    <div class="pt-4">
      <h3 class="text-lg font-semibold tracking-tight text-slate-900 pb-2">
        Add a comment
      </h3>

      <%= render "comments/form", article: @article %>
    </div>
  </section>
</div>