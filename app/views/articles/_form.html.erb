<%= form_with model: article, class: "max-w-2xl mx-auto space-y-6 bg-white p-6 rounded-lg shadow" do |form| %>
  <div>
    <%= form.label :title, class: "text-lg font-semibold tracking-tight text-slate-900 pb-2" %>
    <%= form.text_field :title, class: "mt-1 block w-full rounded-md bg-slate-50 border border-slate-200 px-3 py-2 text-slate-900 shadow-sm focus:border-slate-400 focus:ring-1 focus:ring-slate-400" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <p class="mt-1 text-sm text-red-600"><%= message %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :body, class: "text-lg font-semibold tracking-tight text-slate-900 pb-2" %>
    <%= form.text_area :body, rows: 6, class: "mt-1 block w-full rounded-md bg-slate-50 border border-slate-200 px-3 py-2 text-slate-900 shadow-sm focus:border-slate-400 focus:ring-1 focus:ring-slate-400" %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <p class="mt-1 text-sm text-red-600"><%= message %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :status, class: "text-lg font-semibold tracking-tight text-slate-900 pb-2" %>
    <%= form.select :status, Visible::VALID_STATUSES, { selected: article.status || 'public' }, class: "mt-1 block w-full rounded-md bg-slate-50 border border-slate-200 px-3 py-2 text-slate-900 shadow-sm focus:border-slate-400 focus:ring-1 focus:ring-slate-400" %>
  </div>

  <div class="pt-4">
    <%= form.button "Save",
        type: "submit",
        class: "inline-block rounded-md bg-slate-900 px-4 py-2 text-sm font-medium text-white hover:bg-slate-700"%>
  
  
  </div>
<% end %>
